{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "strictNullChecks": true,
    "module": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "styles": ["styles"],
      "components": ["components"],
      "layouts": ["layouts"],
      "routes": ["routes"],
      "types": ["types"],
      "utilities": ["utilities"]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "ES2019",
      "ES2020"
    ],
    "jsx": "react",
    "strict": true,
    "strictPropertyInitialization": false,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "typeRoots": [
    "./types/",
    "./node_modules/@types/",
    "./**/node_modules/@types/"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.jsx",
    "./**/*.css"
  ],
  "exclude": [
    "./node_modules",
    "./webpack/**/*",
    "postcss.config.js",
    "./**/*.js"
  ]
}